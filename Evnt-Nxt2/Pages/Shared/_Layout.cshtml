<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"] - Evnt_Nxt</title>
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <header class="navbar-wrapper">
        <div class="navbar">
            <div class="logo">Evnt-Nxt</div>
            <nav class="nav-links">
